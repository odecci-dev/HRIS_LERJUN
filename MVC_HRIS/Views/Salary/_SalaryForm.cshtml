@{
    ViewData["Title"] = "Dashboard";
    string message = "";
    if (ViewData["Message"] != null)
    {
        message = ViewData["Message"].ToString();
    }

}
@inject IHttpContextAccessor Accessor;

<style>
   
</style>
<div class="">
    <div class="hrismodal-holder" id="salarymodal" tabindex="-1" role="dialog" aria-labelledby="modal-title"
         aria-hidden="true" style="display: none;" data-keyboard="false" data-backdrop="static">

        <div class="hris-modal-content">
            <div class="hris-modal-header">
                <h4 class="modal-title" id="modal-name">Salary Type Details Form</h4>
                <button type="button" id="h-close" class="close" data-dismiss="modal" onclick="salaryModalClose()">x</button>
            </div>
            <div class="" style="margin:10px" >
                <form id="add-salary-form" class="mod-form">
                    <div class="mod-form-row">
                        <div class="input-container-whole" id="">
                            <label class="label">Sallary Type</label>
                            <input type="hidden" id="salaryid" class="mod-inputs-nw" value="0" required />
                            <input type="hidden" id="salarycreatedby" class="mod-inputs-nw" value="@Accessor.HttpContext.Session.GetString("UserID")" required />
                            <input type="text" id="salarytype" class="mod-inputs-nw" placeholder="" required />
                        </div>
                    </div>
                    <div class="mod-form-row">
                        <div class="input-container-whole" id="">
                            <label class="label">Description</label>
                            <input type="text" id="salarydescription" class="mod-inputs-nw" placeholder="" required />
                        </div>
                    </div>
                    <div class="mod-form-row">
                        <div class="input-container-whole" id="">
                            <label class="label">Rate</label>
                            <input type="number" id="salaryrate" class="mod-inputs-nw" placeholder="" required />
                        </div>
                    </div>
                    <div class="actions" style="align-items: center;">
                        <a data-dismiss="modal" aria-hidden="false" style="cursor:pointer" class="cancel btn" onclick="salaryModalClose()">Cancel</a>
                        <input class="btn" type="submit" value="Submit" id="btn-save" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

