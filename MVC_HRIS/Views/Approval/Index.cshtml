<style>
    /* Style for tab container */
    .tab {
        overflow: hidden;
        border-bottom: 2px solid #ccc;
    }

        /* Tab buttons */
        .tab button {
            background-color: inherit;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 10px 20px;
            transition: 0.3s;
            font-size: 16px;
        }

            /* Active tab button */
            .tab button.active {
                border-bottom: 3px solid white;
            }

    /* Tab content */
    .tab-content {
        display: none;
        padding: 15px;
        border: 1px solid #ddd;
    }

        /* Show active content */
        .tab-content.active {
            display: block;
        }

    .tablinks {
        background: #f8f9fa;
        border: none;
        padding: 12px 18px;
        font-size: 16px;
        border-radius: 8px 8px 0 0;
        cursor: pointer;
        transition: all 0.3sease-in-out;
        outline: none;
        font-weight: 500;
        border-top-left-radius: 30px;
        color: #333;
    }

        .tablinks:hover {
            background: var(--dark);
            color: white;
        }

        .tablinks.active {
            border-top-left-radius: 30px;
            background: var(--dark);
            color: white;
            font-weight: bold;
            box-shadow: 0px -3px 8px rgba(0, 123, 255, 0.3);
        }
</style>

