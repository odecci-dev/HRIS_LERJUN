@{
    ViewData["Title"] = "Dashboard";
    string message = "";
    if (ViewData["Message"] != null)
    {
        message = ViewData["Message"].ToString();
    }

}
@inject IHttpContextAccessor Accessor;

<style>
   
</style>
<div class="">
    <div class="hrismodal-holder" id="departmentmodal" tabindex="-1" role="dialog" aria-labelledby="modal-title"
         aria-hidden="true" style="display: none;" data-keyboard="false" data-backdrop="static">

        <div class="hris-modal-content">
            <div class="hris-modal-header">
                <h4 class="modal-title" id="modal-name">Department Details Form</h4>
                <button type="button" id="h-close" class="close" data-dismiss="modal" onclick="departmentModalClose()">x</button>
            </div>
            <div class="" style="margin:10px" >

                <form id="add-department-form" class="mod-form">
                    <div class="mod-form-row">
                        <div class="input-container-whole" id="">
                            <label class="label">Department</label>
                            <input type="hidden" id="departmentid" class="mod-inputs-nw" value="0" required />
                            <input type="hidden" id="createdby" class="mod-inputs-nw" value="@Accessor.HttpContext.Session.GetString("UserID")" required />
                            <input type="text" id="departmentname" class="mod-inputs-nw" placeholder="" required />
                            
                        </div>
                    </div>
                    <div class="mod-form-row">
                        <div class="input-container-whole" id="">
                            <label class="label">Description</label>
                            <input type="text" id="departmentdescription" class="mod-inputs-nw" placeholder="" required />
                            
                        </div>
                    </div>
                    <div class="mod-form-row">
                        <div class="input-container-whole">
                            <label class="label" for="">Department Head </label>
                            <select id="departmenthead"  style="width:100%" >
                                <option value=""  selected>Select Department Head</option>
                            </select>
                        </div>
                    </div>
                    <div class="actions" style="align-items: center;">
                        <a data-dismiss="modal" aria-hidden="false" style="cursor:pointer" class="cancel btn" onclick="departmentModalClose()">Cancel</a>
                        <input class="btn" type="submit" value="Submit" id="btn-save" />
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

