        function delete_item() {
            console.log(localStorage.getItem('id'));
            var data = {};
            data.id = localStorage.getItem('id');
            data.deletedBy = @Accessor.HttpContext.Session.GetString("Id");
            $.ajax({
                url: '/Employee/deleteemployee',
                data: {
                    data: data,
                },
                type: "POST",
                datatype: "json"
            }).done(function (data) {
                console.log(data.stats);
